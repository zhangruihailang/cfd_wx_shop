													<input type="range" value="4.5" step="0.5" id="backing1" />
													<div
													-->
											</div>
										</div>
										<div class="entry-main">
											<h5 class="entry-title product_font">
												<a href="product.html"><%= product.name %></a>
											</h5>
											<div class="entry-description visible-list">
												<p><%= product.title%></p>
											</div>
											<div class="entry-price">
												<s class="entry-discount">￥<%= product.cost_price%></s>
												<strong class="accent-color price">￥<%= product.promotion_price%></strong>
												<a href="#" class="btn btn-round btn-default add-to-cart visible-list">添加到购物车</a>
											</div>
											
										</div>
									</div>
									
