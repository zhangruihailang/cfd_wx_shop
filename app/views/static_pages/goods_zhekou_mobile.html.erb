							<section class="products-wrapper">
								<!-- DISPLAY MODE - NUMBER OF ITEMS TO BE DISPLAY - PAGINATION -->
							
								<!-- // DISPLAY MODE - NUMBER OF ITEMS TO BE DISPLAY - PAGINATION -->
								
								<!-- PRODUCT LAYOUT -->
								<div class="products-layout grid m-t-b add-cart" data-product=".product" data-thumbnail=".entry-media .thumb" data-title=".entry-title > a" data-url=".entry-title > a" data-price=".entry-price > .price">
										
										<% @products.each do |product| %>
										
									
									
										<div class="product" data-product-id="<%= product.id%>" data-category="白酒|白酒-<%= product.brand%>" data-brand="<%= product.brand%>" data-price="<%= product.promotion_price%>" >
										<div class="entry-media">
											<img data-src="http://<%=product.thumbnail.url("378x505")%>" alt="" class="lazyLoad thumb" />
											<div class="hover">
													<a href="#" onclick="goto('/product/index?id=<%=product.id%>')" class="entry-url"></a>
												 
												<ul class="icons unstyled">
													<li>
														<div class="circle ribbon ribbon-sale">热卖</div>
													</li>
													<li>
														<a href="http://<%=product.thumbnail.url("378x505")%>" class="circle" data-toggle="lightbox"><i class="iconfont-search"></i></a>
													</li>
													
													<li>
														<a href="#" class="circle add-to-cart"><i class="iconfont-shopping-cart"></i></a>
													</li>
													
												</ul>
												
											  <!--
